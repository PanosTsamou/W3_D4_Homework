{% extends "base.jinja" %}

{% block content %}
    <h1>Upcoming Events!</h1>
    <form action="/events" method="post">
        <label>Name:</label>
        <input type="text" name="name">
        <br>
        <label>Number of guests:</label>
        <input type="number" name="guests">
        <label>Recurring:</label>
        <input type='hidden' name="recurring" value='False'>
        <input type="checkbox" name="recurring" value="True">
        <br>
        <label>Date</label>
        <input type="date" name="date">
        <label>Location:</label>
        <input type="text" name="room_location">
        <br>
        <label>Description</label>
        <textarea type="textar" name="description"></textarea>
        <input type="submit" value="Submit">
    </form>

  
    {% for event in events %}
    <div class="event">
      <h2>{{ event.name }}</h2>
      <h3>{{ event.date.strftime('%b %d %Y') }}</h3>
      <h3>{{ event.description }}</h3>
      <h5>Guests: {{ event.guests }}</h5>
      <h5>Room: {{ event.room_location }}</h5>

          {% if event.recurring %}
          <p><i>Recurring </i></p>
          {% endif %}

          
    </div>
    {% endfor %}
    </div>
{% endblock %}
